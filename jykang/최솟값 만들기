import java.util.*;
class Solution
{
    public int solution(int []A, int []B)
    {
        int answer = 0;

        
        Arrays.sort(A);
        Arrays.sort(B);
        
        
        int length = A.length;
        for(int i=0;i<length;i++){
            int temp_A = A[i];
            int temp_B = B[length-i-1];
            
            answer += (temp_A * temp_B);
        }
        
        return answer;
    }
}
